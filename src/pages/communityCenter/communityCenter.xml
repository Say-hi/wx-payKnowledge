<view class="tab-wrap">
  <view url="{{ item.url }}"
             wx:for="{{ tabArr }}"
             wx:key="*9"
             hover-class="none"
             catchtap="changeTab"
             data-index="{{ index }}"
             class="tab-item f24 c333 bd1 bt1 lh88">
    <image mode="widthFix" src="{{ item.img }}"></image>
    <view class="f30 c666 fw7 {{ active == index ? 'active' : '' }}">{{ item.name }}</view>
  </view>
</view>
<view class="zw"></view>
