<swiper autoplay
        indicator-dots
        circular
        indicator-color="{{ indicatorColor }}"
        indicator-active-color="{{ indicatorActiveColor }}"
        class="banner">
  <swiper-item  wx:for="{{ indexData.slide }}"
                wx:key="*0">
    <image mode="aspectFill" src="{{ imgDomain }}{{ item.picture }}"></image>
  </swiper-item>
</swiper>
<view class="tab-wrap" >
    <navigator url="{{ item.path }}"
           wx:for="{{ indexData.nav[1] }}"
           wx:key="*1"
           hover-class="none"
           class="tab-item f24 c333">
        <image mode="widthFix" src="{{ imgDomain }}{{ item.picture }}"></image>
        <view class="f24 c333">{{ item.title }}</view>
    </navigator>
</view>
